.personal {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: #f6f6f6;
}

.personal .personal-wrapper {
  width: 100%;
  height: 40%;
  background: #fff;
}

.personal-wrapper .loginBar {
  display: flex;
  align-items: center;
  width: 100%;
  height: 70%;
  background: #4BA558;
}

.loginBar .personal-img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: #A0E7B6;
  overflow: hidden;
  margin: 0 40rpx;
}

.loginBar .personal-img image {
  width: 100%;
  height: 100%;
}

.loginBar .btn {
  padding: 10rpx 20rpx;
  border: 4rpx solid #fff;
  border-radius: 40rpx;
  color: #fff; 
  font-size: 28rpx;
}

.orderBar {
  display: flex;
  align-items: center;
  height: 30%;
}

.orderBar .order-item {
  width: 25%;
  text-align: center;
}

.order-item image {
  width: 60rpx;
}

.order-item text {
  font-size: 24rpx;
}

.my {
  background: #FFF;
  margin: 20rpx 0;
}

.my view {
  position: relative;
  padding: 20rpx 30rpx;
}

.my view image {
  width: 50rpx;
  vertical-align: middle;
}

.my view text {
  margin: 0 40rpx;
}

.my view .arrow {
  position: absolute;
  right: 0;
  margin-right: 20rpx; 
}